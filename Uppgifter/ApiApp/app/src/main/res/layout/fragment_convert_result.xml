<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConvertResultFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/convertResultTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Convert Result"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/convertResultCur1Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Base Currency" />

    <TextView
        android:id="@+id/convertResultCur1Text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/convertResultCur2Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Target Currency" />

    <TextView
        android:id="@+id/convertResultCur2Text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/convertResultAmountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Amount" />

    <TextView
        android:id="@+id/convertResultAmountText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/convertResultValueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Value" />

    <TextView
        android:id="@+id/convertResultValueText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="TextView"
        android:textSize="24sp" />

</LinearLayout>