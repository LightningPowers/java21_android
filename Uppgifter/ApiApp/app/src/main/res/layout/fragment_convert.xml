<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConvertFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/convertTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert Fragment"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/convertBaseCurrencyTextfield"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="Base Currency"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/convertTargetCurrencyTextfield"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="Target Currency"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/convertAmountTextfield"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Convert" />

</LinearLayout>